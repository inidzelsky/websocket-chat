{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}
